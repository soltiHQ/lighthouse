package status

// Empty renders a "no items" placeholder with an illustration.
templ Empty(message string) {
	<div class={ containerClass("py-14") }>
		<div class="opacity-70">
			<img
				src="/static/img/empty.png"
				alt=""
				aria-hidden="true"
				class="w-80 h-auto select-none pointer-events-none"
			/>
		</div>

		<p class={ messageClass(true) }>
			{ message }
		</p>
	</div>
}
